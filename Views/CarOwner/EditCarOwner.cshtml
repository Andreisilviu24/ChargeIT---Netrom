@model CarOwnerViewModel

@{
    ViewData["Title"] = "Edit Car Owner Page";
}

<h1 class="display-4 mb-4">Edit Car Owner</h1>

<form asp-controller="CarOwner" asp-action="EditExistingCarOwner" method="post">

    <input type="text" class="form-control form-input" asp-for="Id" hidden>

    <div class="form-group margin-bot-15">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control form-input" asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group margin-bot-15">
        <label asp-for="Email" class="form-label"></label>
        <input type="email" class="form-control form-input" asp-for="Email" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    <a type="button" class="btn btn-secondary" asp-area="" asp-controller="CarOwner" asp-action="Index">Cancel</a>

</form>